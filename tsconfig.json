{
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    "test",
  ],
}
